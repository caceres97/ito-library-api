generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String
  password  String
  role      UserRoles @default(value: STUDENT)

  Rental    Rental[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Genre {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  Book      Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Author {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  Book Book[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Book {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  title           String
  description     String
  publicationYear Int
  deleted         Boolean @default(false)

  genre   Genre  @relation(fields: [genreId], references: [id])
  genreId String @db.ObjectId

  author   Author @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId

  bookCopy BookCopy[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model BookCopy {
  id     String     @id @default(auto()) @map("_id") @db.ObjectId
  code   String
  status BookStatus @default(value: ACTIVE)

  book   Book   @relation(fields: [bookId], references: [id])
  bookId String @map("book_id") @db.ObjectId

  Rental Rental[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Rental {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  returnDate      DateTime
  returnedDate    DateTime?
  status          RentStatus
  wasReturnedLate Boolean    @default(false)

  bookCopy   BookCopy @relation(fields: [bookCopyId], references: [id])
  bookCopyId String   @db.ObjectId

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

enum RentStatus {
  RUNNING
  CLOSED
}

enum BookStatus {
  RENTED
  ACTIVE
  INACTIVE
  DELETED
}

enum UserRoles {
  LIBRARIAN
  STUDENT
}
